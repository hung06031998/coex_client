<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blur_busine">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="222dp"
            android:layout_height="106dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/asset_5_6x1" />

        <TextView
            android:id="@+id/forpartner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/login_activity_role_margin_top"
            android:gravity="center"
            android:text="@string/used"
            android:textAppearance="@style/textForPartner"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/marginStartContext"
            android:layout_marginTop="@dimen/marginTopLogo"
            android:text="@string/fullName"
            android:textAppearance="@style/textNormal"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/edtFullName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_activity_input_height"
            android:layout_below="@id/txtFullName"
            android:layout_alignLeft="@id/txtFullName"
            android:layout_marginRight="@dimen/marginStartContext"
            android:background="@drawable/edt_background"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingLeft="@dimen/login_activity_input_padding_left"
            android:paddingRight="@dimen/login_activity_input_padding_left"
            android:scrollHorizontally="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:letterSpacing="0.04"/>

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtFullName"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/marginStartContext"
            android:layout_marginTop="12dp"
            android:text="@string/email"
            android:textAppearance="@style/textNormal"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_activity_input_height"
            android:layout_below="@id/txtEmail"
            android:layout_alignLeft="@id/txtFullName"
            android:layout_alignRight="@+id/edtFullName"
            android:background="@drawable/edt_background"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="@dimen/login_activity_input_padding_left"
            android:paddingRight="@dimen/login_activity_input_padding_left"
            android:scrollHorizontally="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:letterSpacing="0.04"/>
        <TextView
            android:id="@+id/txtPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtEmail"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/marginStartContext"
            android:layout_marginTop="12dp"
            android:text="@string/phoneNumber"
            android:textAppearance="@style/textNormal"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/edtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_activity_input_height"
            android:layout_below="@id/txtPhoneNumber"
            android:layout_alignLeft="@id/txtEmail"
            android:layout_alignRight="@+id/edtEmail"
            android:background="@drawable/edt_background"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingLeft="@dimen/login_activity_input_padding_left"
            android:paddingRight="@dimen/login_activity_input_padding_left"
            android:scrollHorizontally="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:letterSpacing="0.04"/>

        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtPhoneNumber"
            android:layout_alignLeft="@id/txtPhoneNumber"
            android:layout_marginTop="12dp"
            android:text="@string/password"
            android:textAppearance="@style/textNormal"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_activity_input_height"
            android:layout_below="@id/txtPassword"
            android:layout_alignLeft="@id/txtPhoneNumber"
            android:layout_alignRight="@id/edtPhoneNumber"
            android:background="@drawable/edt_background"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="@dimen/login_activity_input_padding_left"
            android:paddingRight="@dimen/login_activity_input_padding_right"
            android:scrollHorizontally="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:letterSpacing="0.04"/>

        <TextView
            android:id="@+id/txtConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtPassword"
            android:layout_alignLeft="@id/txtEmail"
            android:layout_marginTop="12dp"
            android:text="@string/cofirm_password"
            android:textAppearance="@style/textNormal"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_activity_input_height"
            android:layout_below="@id/txtConfirmPassword"
            android:layout_alignLeft="@id/txtEmail"
            android:layout_alignRight="@id/edtEmail"
            android:background="@drawable/edt_background"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="@dimen/login_activity_input_padding_left"
            android:paddingRight="@dimen/login_activity_input_padding_right"
            android:scrollHorizontally="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:letterSpacing="0.04"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtConfirmPassword"
            android:layout_alignLeft="@id/edtEmail"
            android:layout_alignRight="@id/edtEmail"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_normal_background"
            android:text="@string/btnRegister"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLogin"
            android:layout_below="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/txtRegister"
            android:textAppearance="@style/textLink"
            android:textStyle="italic"
            android:textSize="16dp"/>
    </RelativeLayout>
</layout>
