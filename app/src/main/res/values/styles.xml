<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textNormal">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="textForPartner">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#3EC6FF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="textLink">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textColor">#3EC6FF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="title_14_pink_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color</item>
<!--        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_bold</item>-->
    </style>

    <style name="title_13_silver_black_regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
<!--        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>-->
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/silver_black</item>
    </style>

    <style name="title_13_black_regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
<!--        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title_12_blue_cost">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
<!--        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!-- Coo    -->

</resources>
